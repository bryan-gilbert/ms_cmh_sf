<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
<aura:attribute name="version" type="String" default="v0.7"/>
<aura:handler name="init" value="{!this}" action="{!c.initValues}" /> 
<aura:attribute name="myCat" type="String" default="Jerry"/>
    <div>My Cat: &nbsp; {!v.myCat}</div>
    <lightning:button
        label="Click here to get your cat"
        onclick="{!c.getValFromStorage}" />

    
<div class="slds-text-body_small slds-text-color_weak">{!v.version} &nbsp;-&nbsp; {!v.recordId}</div> 
</aura:component>